# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=https://verkas.bosgilserver.cloud

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=verkas_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:19006

# Xendit Configuration
XENDIT_SECRET_KEY=xnd_development_xxxxxxxxxxxxxxxxxxxxx
XENDIT_PUBLIC_KEY=xnd_public_development_xxxxxxxxxxxxxxxxxxxxx
XENDIT_WEBHOOK_TOKEN=your_webhook_token_here

# Expo Push Notifications (Optional - for production)
EXPO_ACCESS_TOKEN=your_expo_access_token_here

# Firebase Cloud Messaging (FCM) - REQUIRED for direct FCM
# Option 1: Path to service account JSON file
FCM_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Option 2: Service account JSON as string (base64 encoded or plain JSON string)
# FCM_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

